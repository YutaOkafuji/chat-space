.content
  .left-content
    .left-header
      .left-header__user
        %p.left-header__user__name
          = current_user.name
        %ul.left-header__user__menu
          %li.left-header__user__menu__list
            = link_to new_group_path, class: "left-header__user__menu__list__link" do
              =fa_icon "edit"
          %li.left-header__user__menu__list
            = link_to edit_user_path(current_user), class: "left-header__user__menu__list__link" do
              =fa_icon "cog"
    .left-groups
      = render "group"
  .right-content
    .right-content__header
      .right-content__header__group
        %p.right-content__header__group__name test-group
        %p.right-content__header__group__index member:yuta
      = link_to 'Edit',"",class: "right-content__header__edit"
    .right-content__messages
      = render "message"
    .input-form
      %form.form
        .input-box
          %input{type: "text",class: "input-box__text",placeholder: "type a message"}
          %label.input-box__image
            = fa_icon 'image'
            %input{type: "file",class: "input-box__image__input"}
        %input{type: "submit",value: "send",class: "input-submit"}


