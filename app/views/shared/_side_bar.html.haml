.left-content
  .left-header
    .left-header__user
      %h3.left-header__user__name
        = current_user.name
      %ul.left-header__user__menu
        %li.left-header__user__menu__list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'left-header__user__menu__list__link'
        %li.left-header__user__menu__list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'left-header__user__menu__list__link'
  .left-groups
    - current_user.groups.each do |group|
      .left-group
        = link_to group_messages_path(group) do
          %p.left-group__name
            = group.name
          %p.left-group__latest-message
            = group.show_last_message